@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}






<div class="container p-4">
    <div class="row pt-3">
        <div class="col-6">
            <h2> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary" >
                <i class="bi bi-plus"></i>Create Category
            </a>
        
        </div>

    </div>

</div>

<table class="table table-bordered  table-dark   style="width:100%">
    <tr class="table-primary">

        <th>
            Name
        </th>
        <th>
            Status
        </th>
        <th>
            Action
        </th>
    </tr>

    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td width="50%">
               @obj.Name
            </td>
            <td width="30%">
                @obj.Status
            </td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit
                    <i class="bi bi-pencil-square"></i>
                </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                        Delete
                        <i class="bi bi-trash"></i>
                    </a>
            </td>
        </tr>
        }
    </tbody>
</table>

