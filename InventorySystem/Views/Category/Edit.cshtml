@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container d-flex justify-content-center align-items-center">
<form method="post" asp-action="Edit" >

    <div class="text-end">
            <h2>د کټګورۍ سمون</h2>
    </div>
    <br />
    <div>
            <label asp-for="Name">نوم</label>
        <input asp-for="Name" class="form-control" style="width:300px" />

    </div>
 
    <br />
        <button type="submit" class=" btn btn-info" style="width:150px">
             تازه کول
        </button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">
            بیرته لیست ته تلل
    </a>
</form>
</div>



