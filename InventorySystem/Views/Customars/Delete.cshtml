@model InventorySystem.Models.Customar

@{
    ViewData["Title"] = "Delete";
}

<h1>ړنګول</h1>

<h3>
  
    ایا تاسو ډاډه یاست چې دا ړنګ شی؟
</h3>
<div>
    <h4>پیریدونکی</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-10">
            نوم
        </dt>
       
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.CustomarImage)
        </dd>
        <dt class = "col-sm-10">
            پیرودونکي عکس
        </dt>
      
    
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.MobileNo)
        </dd>
        <dt class = "col-sm-10">
            موبایل_نمبر
        </dt>
       
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-10">
            ایمیل
        </dt>
       
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-10">
            پته
        </dt>
     
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-10">
            حالت
        </dt>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="ړنګول" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">بیرته لیست ته تلل</a>
    </form>
</div>
