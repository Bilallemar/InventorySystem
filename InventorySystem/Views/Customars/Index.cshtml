@model IEnumerable<InventorySystem.Models.Customar>

@{
    ViewData["Title"] = "Index";
}


<div class="row pt-3">
    <div class="col-6 text-end">
        <h2> پیرودونکي جوړولو لیست</h2>
    </div>
    <div class="col-6 text-end">

        <a asp-controller="Customars" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i>پیرودونکي جوړ کړئ
        </a>

    </div>

</div>


<table class="table table-bordered  table-dark" style="width:100%">
    <thead>
        <tr class ="table-primary">
            <th>
                
                نوم
            </th>
            <th>
                
                پیرودونکي عکس
            </th>
            <th>
               
                موبایل_نمبر

            </th>
            <th>
               
                ایمیل
            </th>
            <th>
               
                پته
            </th>
            <th>
                
                حالت
            </th>
            <th >عمل</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomarImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        سمون
                        <i class="bi bi-pencil-square"></i></a>|
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">
                        جزیات
                        <i class="bi bi-person-lines-fill"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        ړنګول
                        <i class="bi bi-trash"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
